<!-- views/layout/default/head.ejs -->

<% if ( config.title !== "" ) { %>
<title><%= config.title %></title>
<% } else { %>
<title><%= __('LAYOUT_DEFAULT_HEAD_CROSS_PLATFORM_AUTHENTICATION_TITLE') %></title>
<% } %>

<meta name="viewport" content="width=device-width, initial-scale=1.0">

<!-- Bootstrap -->
<link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
<link href="/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" rel="stylesheet">

<link href="/assets/css/main.css" rel="stylesheet">

<% if ( broadcaster && broadcaster.name === "rts" ) { %>
<%- include ../rts/head %>
<% } %>

<link href="/assets/css/profile.css" rel="stylesheet">

<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
<!--[if lt IE 9]>
<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
<script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
<![endif]-->

<!-- Google reCAPTCHA -->
<script src='https://www.google.com/recaptcha/api.js?onload=recaptchaReady&render=explicit&hl=<%= language %>' async defer></script>

<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="/js/jquery.min.js"></script>
<script src="/jquery-form/jquery.form.js"></script>
<!-- Include all compiled plugins (below), or include individual files as needed -->
<script src="/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="/cookie/src/js.cookie.js"></script>

<script type="text/javascript" src="/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
<script type="text/javascript" src="/bootstrap-datepicker/js/locales/bootstrap-datepicker.fr.js"
        charset="UTF-8"></script>
<script type="text/javascript" src="/bootstrap-datepicker/js/locales/bootstrap-datepicker.de.js"
        charset="UTF-8"></script>

<script>
    var userLogged = <% if (user) { %>true<% } else { %>false<% } %>,
        urlPrefix = '<%= config.urlPrefix %>',
        siteKey = '<%= config.recaptcha.site_key %>';
</script>

<script type="text/javascript" src="/assets/js/lang.js"></script>
<script type="text/javascript" src="/assets/js/grecaptcha.js"></script>
<script type="text/javascript" src="/assets/js/load.js"></script>